<?xml version='1.0'?>
<!--
  Drone model template for multi-drone ArduPilot SITL simulation.

  This model wraps iris_with_standoffs from ardupilot_gazebo and configures
  the ArduPilotPlugin for unique FDM port communication.

  Placeholders (replaced by generate_world.py):
    - MODEL_NAME: Drone identifier (e.g., Drone1, Drone2)
    - FDM_PORT: Unique port for SITL communication (e.g., 9002, 9012)

  Based on ardupilot_gazebo multi-drone tutorial.
-->
<sdf version="1.9">
  <model name="DroneTemplate">
    <!-- Include base iris model from ardupilot_gazebo -->
    <include>
      <uri>model://iris_with_standoffs</uri>
    </include>

    <!-- RGB Camera for perception (Phase 5) -->
    <link name='camera_link'>
      <pose relative_to='iris_with_standoffs::base_link'>0.1 0 -0.05 0 0.26 0</pose>
      <inertial>
        <mass>0.05</mass>
        <inertia>
          <ixx>0.00001</ixx><ixy>0</ixy><ixz>0</ixz>
          <iyy>0.00001</iyy><iyz>0</iyz><izz>0.00001</izz>
        </inertia>
      </inertial>
      <visual name='camera_visual'>
        <geometry><box><size>0.02 0.03 0.02</size></box></geometry>
        <material>
          <ambient>0.1 0.1 0.1</ambient>
          <diffuse>0.2 0.2 0.2</diffuse>
        </material>
      </visual>
      <sensor name="rgb_camera" type="camera">
        <camera>
          <horizontal_fov>1.3962634</horizontal_fov>
          <image><width>640</width><height>480</height><format>RGB_INT8</format></image>
          <clip><near>0.1</near><far>100</far></clip>
          <noise><type>gaussian</type><mean>0.0</mean><stddev>0.007</stddev></noise>
        </camera>
        <always_on>1</always_on>
        <update_rate>15</update_rate>
        <visualize>true</visualize>
        <topic>camera</topic>
      </sensor>
    </link>
    <joint name='camera_joint' type='fixed'>
      <parent>iris_with_standoffs::base_link</parent>
      <child>camera_link</child>
    </joint>

    <!-- Joint state publisher for telemetry -->
    <plugin filename="gz-sim-joint-state-publisher-system"
      name="gz::sim::systems::JointStatePublisher">
    </plugin>

    <!-- Lift-drag simulation for each rotor blade -->
    <!-- Rotor 0 -->
    <plugin filename="gz-sim-lift-drag-system"
        name="gz::sim::systems::LiftDrag">
      <a0>0.3</a0>
      <alpha_stall>1.4</alpha_stall>
      <cla>4.2500</cla>
      <cda>0.10</cda>
      <cma>0.0</cma>
      <cla_stall>-0.025</cla_stall>
      <cda_stall>0.0</cda_stall>
      <cma_stall>0.0</cma_stall>
      <area>0.002</area>
      <air_density>1.2041</air_density>
      <cp>0.084 0 0</cp>
      <forward>0 1 0</forward>
      <upward>0 0 1</upward>
      <link_name>iris_with_standoffs::rotor_0</link_name>
    </plugin>
    <plugin filename="gz-sim-lift-drag-system"
        name="gz::sim::systems::LiftDrag">
      <a0>0.3</a0>
      <alpha_stall>1.4</alpha_stall>
      <cla>4.2500</cla>
      <cda>0.10</cda>
      <cma>0.0</cma>
      <cla_stall>-0.025</cla_stall>
      <cda_stall>0.0</cda_stall>
      <cma_stall>0.0</cma_stall>
      <area>0.002</area>
      <air_density>1.2041</air_density>
      <cp>-0.084 0 0</cp>
      <forward>0 -1 0</forward>
      <upward>0 0 1</upward>
      <link_name>iris_with_standoffs::rotor_0</link_name>
    </plugin>

    <!-- Rotor 1 -->
    <plugin filename="gz-sim-lift-drag-system"
        name="gz::sim::systems::LiftDrag">
      <a0>0.3</a0>
      <alpha_stall>1.4</alpha_stall>
      <cla>4.2500</cla>
      <cda>0.10</cda>
      <cma>0.0</cma>
      <cla_stall>-0.025</cla_stall>
      <cda_stall>0.0</cda_stall>
      <cma_stall>0.0</cma_stall>
      <area>0.002</area>
      <air_density>1.2041</air_density>
      <cp>0.084 0 0</cp>
      <forward>0 1 0</forward>
      <upward>0 0 1</upward>
      <link_name>iris_with_standoffs::rotor_1</link_name>
    </plugin>
    <plugin filename="gz-sim-lift-drag-system"
        name="gz::sim::systems::LiftDrag">
      <a0>0.3</a0>
      <alpha_stall>1.4</alpha_stall>
