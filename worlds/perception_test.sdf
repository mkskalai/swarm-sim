            </cylinder>
          </geometry>
          <material>
            <ambient>0.3 0.5 0.3 1</ambient>
            <diffuse>0.3 0.5 0.3 1</diffuse>
          </material>
        </visual>
        <visual name="head">
          <pose>0 0 1.35 0 0 0</pose>
          <geometry>
            <sphere>
              <radius>0.15</radius>
            </sphere>
          </geometry>
          <material>
            <ambient>0.85 0.7 0.55 1</ambient>
            <diffuse>0.85 0.7 0.55 1</diffuse>
          </material>
        </visual>
        <visual name="left_leg">
          <pose>-0.1 0.15 0.4 0.3 0 0</pose>
          <geometry>
            <cylinder>
              <radius>0.08</radius>
              <length>0.8</length>
            </cylinder>
          </geometry>
          <material>
            <ambient>0.25 0.25 0.35 1</ambient>
