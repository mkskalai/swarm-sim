        </visual>
      </link>
    </model>

    <!-- Truck 1: Large truck -->
    <model name="truck_1">
      <static>true</static>
      <pose>-20 15 0 0 0 -0.4</pose>
      <link name="body">
        <!-- Cab -->
        <visual name="cab">
          <pose>3.0 0 1.2 0 0 0</pose>
          <geometry>
            <box>
              <size>2.5 2.4 2.0</size>
