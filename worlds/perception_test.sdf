        </visual>
      </link>
    </model>

    <!-- Person 3: Walking pose -->
    <model name="person_3">
      <static>true</static>
      <pose>20 -8 0 0 0 -1.2</pose>
      <link name="body">
        <visual name="torso">
          <pose>0 0 0.9 0 0 0</pose>
          <geometry>
            <cylinder>
              <radius>0.25</radius>
