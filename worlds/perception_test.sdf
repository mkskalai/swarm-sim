            </cylinder>
          </geometry>
          <material>
            <ambient>0.25 0.25 0.35 1</ambient>
            <diffuse>0.25 0.25 0.35 1</diffuse>
          </material>
        </visual>
      </link>
    </model>

    <!-- ==================== VEHICLES (Targets) ==================== -->

    <!-- Car 1: Blue sedan -->
    <model name="car_1">
      <static>true</static>
      <pose>25 -5 0 0 0 0.3</pose>
      <link name="body">
        <!-- Main body -->
        <visual name="chassis">
          <pose>0 0 0.5 0 0 0</pose>
          <geometry>
            <box>
              <size>4.5 1.8 1.0</size>
            </box>
          </geometry>
          <material>
            <ambient>0.1 0.2 0.5 1</ambient>
            <diffuse>0.1 0.2 0.5 1</diffuse>
          </material>
        </visual>
        <!-- Cabin -->
        <visual name="cabin">
          <pose>0.3 0 1.2 0 0 0</pose>
          <geometry>
            <box>
              <size>2.0 1.6 0.8</size>
            </box>
          </geometry>
          <material>
            <ambient>0.3 0.5 0.7 1</ambient>
            <diffuse>0.3 0.5 0.7 1</diffuse>
          </material>
        </visual>
        <!-- Wheels -->
        <visual name="wheel_fl">
          <pose>1.2 0.9 0.3 1.5708 0 0</pose>
          <geometry>
            <cylinder><radius>0.3</radius><length>0.2</length></cylinder>
          </geometry>
          <material>
            <ambient>0.1 0.1 0.1 1</ambient>
            <diffuse>0.1 0.1 0.1 1</diffuse>
          </material>
        </visual>
        <visual name="wheel_fr">
          <pose>1.2 -0.9 0.3 1.5708 0 0</pose>
          <geometry>
            <cylinder><radius>0.3</radius><length>0.2</length></cylinder>
          </geometry>
          <material>
            <ambient>0.1 0.1 0.1 1</ambient>
            <diffuse>0.1 0.1 0.1 1</diffuse>
          </material>
        </visual>
        <visual name="wheel_rl">
          <pose>-1.2 0.9 0.3 1.5708 0 0</pose>
          <geometry>
            <cylinder><radius>0.3</radius><length>0.2</length></cylinder>
          </geometry>
          <material>
            <ambient>0.1 0.1 0.1 1</ambient>
            <diffuse>0.1 0.1 0.1 1</diffuse>
          </material>
        </visual>
        <visual name="wheel_rr">
          <pose>-1.2 -0.9 0.3 1.5708 0 0</pose>
          <geometry>
            <cylinder><radius>0.3</radius><length>0.2</length></cylinder>
          </geometry>
          <material>
            <ambient>0.1 0.1 0.1 1</ambient>
            <diffuse>0.1 0.1 0.1 1</diffuse>
          </material>
        </visual>
      </link>
    </model>

    <!-- Car 2: Red car -->
    <model name="car_2">
      <static>true</static>
      <pose>-15 -10 0 0 0 1.8</pose>
      <link name="body">
        <visual name="chassis">
          <pose>0 0 0.5 0 0 0</pose>
          <geometry>
            <box>
              <size>4.2 1.7 1.0</size>
            </box>
          </geometry>
          <material>
            <ambient>0.6 0.1 0.1 1</ambient>
            <diffuse>0.6 0.1 0.1 1</diffuse>
          </material>
        </visual>
        <visual name="cabin">
          <pose>0.2 0 1.15 0 0 0</pose>
          <geometry>
            <box>
              <size>1.8 1.5 0.7</size>
            </box>
          </geometry>
          <material>
            <ambient>0.2 0.2 0.3 1</ambient>
            <diffuse>0.2 0.2 0.3 1</diffuse>
          </material>
        </visual>
        <visual name="wheel_fl">
          <pose>1.1 0.85 0.3 1.5708 0 0</pose>
          <geometry>
            <cylinder><radius>0.3</radius><length>0.2</length></cylinder>
          </geometry>
          <material><ambient>0.1 0.1 0.1 1</ambient></material>
        </visual>
        <visual name="wheel_fr">
